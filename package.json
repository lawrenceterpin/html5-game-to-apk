{
  "name": "phaser-js-game-master",
  "version": "1.1.0",
  "description": "Environnement master d'un jeu Phaser JS",
  "main": "src/index.js",
  "scripts": {
    "remove-old-folder-app": "rmdir \"app/src\" /S /Q && rmdir \"app/views\" /S /Q",
    "copy:dist": "xcopy \"dist\" \"app/views\" /s /i",
    "copy-assets": "xcopy \"src/assets\" \"dist/src/assets\" /s /i",
    "copy-dist": "npm run remove-old-folder-app && npm run copy:dist",
    "move-assets": "move \"app/views/src\" \"app\"",
    "setup-app": "cd app && npm install",
    "setup": "npm install && npm run setup-app",
    "build-apk": "cd app && npm run build",
    "build": "webpack --config webpack/prod.js && npm run copy-assets && npm run copy-dist && npm run move-assets && npm run build-apk",
    "start": "webpack-dev-server --config webpack/base.js --open"
  },
  "author": "Lawrence Terpin",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "file-loader": "^4.3.0",
    "html-webpack-plugin": "^3.2.0",
    "raw-loader": "^3.1.0",
    "terser-webpack-plugin": "^2.3.6",
    "tile-extruder": "^2.0.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "phaser": "^3.23.0",
    "phaser3-rex-plugins": "^1.1.14"
  }
}
